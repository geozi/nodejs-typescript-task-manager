{
  "name": "nodejs-typescript-task-manager",
  "version": "1.0.0",
  "description": "Contains the backend implementation of a Task Manager API in Typescript",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "build": "tsc",
    "test": "mocha",
    "testWithCoverage": "nyc mocha",
    "lint": "eslint .",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/app.ts",
    "generateDocs": "npx typedoc"
  },
  "keywords": [
    "middleware pattern",
    "RESTful API",
    "Typescript",
    "Mocha"
  ],
  "author": "geozi",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.4",
    "mongoose-unique-validator": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/mocha": "^10.0.10",
    "@types/mongoose-unique-validator": "^1.0.9",
    "@types/sinon": "^17.0.3",
    "eslint": "^9.18.0",
    "eslint-plugin-mocha": "^10.5.0",
    "globals": "^15.14.0",
    "mocha": "^11.0.1",
    "nodemon": "^3.1.9",
    "nyc": "^17.1.0",
    "sinon": "^19.0.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.27.6",
    "typedoc-plugin-markdown": "^4.4.1",
    "typescript-eslint": "^8.20.0"
  }
}
